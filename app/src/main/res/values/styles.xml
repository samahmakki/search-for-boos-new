<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="tabscolor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        // Intent between activity
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="backgroundcolor">#e4e4e4</item>
        <item name="navigationheader">#d7e2e4</item>
        <item name="tintcolor">#aaa</item>
        <item name="textcolor">@android:color/black</item>
        <item name="cardbackgroundcolor_1">#ffffff</item>
        <item name="specialbackgroundcolor">#28aaaaaa</item>
        <item name="currentbackgroundcolor">@color/colorPrimary</item>
        <item name="navigationcolor">#fdfeff</item>
        <item name="selecteditemcolor">#f0ffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="emptystatecolor">#2d6ca4</item>
        <item name="titlegoal">#28a1d3</item>
        <item name="listview">#ffffff</item>
        <item name="FloatingActionButton">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="navigationheadertext">#0035bf</item>
        <item name="navigationicon">@color/itemIconTint</item>
        <item name="bookNameText">#0032e0</item>
        <item name="authorNameText">#003cf0</item>
        <item name="bookInfoBackground">#e4e4e4</item>
        <item name="publishedDateanddesc">#000000</item>
        <item name="addButton">#f00000</item>
        <item name="search_btn">#0032e0</item>
    </style>


    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
